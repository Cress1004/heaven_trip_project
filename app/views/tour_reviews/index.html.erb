<p id="notice"><%= notice %></p>

<h1>ツアーレビュー</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>ツアー</th>
      <th>レビュー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tour_reviews.each do |tour_review| %>
      <tr>
        <td><%= tour_review.user_id %></td>
        <td><%= tour_review.tour_id %></td>
        <td><%= tour_review.review %></td>
        <td><%= link_to '表示', tour_review %></td>
        <td><%= link_to '編集', edit_tour_review_path(tour_review) %></td>
        <td><%= link_to '削除', tour_review, method: :delete, data: { confirm: '本気ですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

