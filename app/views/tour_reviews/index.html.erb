<p id="notice"><%= notice %></p>

<h1>Tour Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Tour</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tour_reviews.each do |tour_review| %>
      <tr>
        <td><%= tour_review.user_id %></td>
        <td><%= tour_review.tour_id %></td>
        <td><%= tour_review.review %></td>
        <td><%= link_to 'Show', tour_review %></td>
        <td><%= link_to 'Edit', edit_tour_review_path(tour_review) %></td>
        <td><%= link_to 'Destroy', tour_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tour Review', new_tour_review_path %>
