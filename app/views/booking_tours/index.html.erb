<p id="notice"><%= notice %></p>

<h1>Booking Tours</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Tour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booking_tours.each do |booking_tour| %>
      <tr>
        <td><%= booking_tour.user_id %></td>
        <td><%= booking_tour.tour_id %></td>
        <td><%= link_to 'Show', booking_tour %></td>
        <td><%= link_to 'Edit', edit_booking_tour_path(booking_tour) %></td>
        <td><%= link_to 'Destroy', booking_tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

