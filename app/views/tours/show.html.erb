<div class="section__container">
      <h1 class="homepage__hero">Welcome to heaven trip</h1>
    <p class="homepage__description">You want go to heaven when you die?</p>
    <p class="homepage__subscription">This is for you! </p>
  <div class="authen__container">
<p id="notice"><%= notice %></p>



<p>
  <strong>Title:</strong>
  <%= @tour.title %>
</p>

<p>
  <strong>Time:</strong>
  <%= @tour.time %>
</p>

<p>
  <strong>Description:</strong>
  <%= @tour.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @tour.price %> VND
</p>

<p>
   <% if @tour.image.attached? %>
     <%= image_tag @tour.image %>
   <% end %>
 </p>
 
 
 <%= link_to 'New Review', review_path_url(@tour.id) %>
  <%= link_to 'Edit', edit_tour_path(@tour) %> |
  <%= link_to 'Back', tours_path %>
 </br>
 </br>
 <p><em>ALL REVIEWS</em></p>
  <table>
    <th>User name</th>
    <th>Comment</th>
  <% @reviews.each do |review| %>
      <% @user = User.find(review.user_id)%>
      <tr>
        <td><%= link_to @user.name, users_show_path(@user) %></td>
        <td><%= review.review%></td>
      </tr>
  <% end %>
      </table>
</div>
</div>