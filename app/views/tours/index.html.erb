<p id="notice"><%= notice %></p>

<h1>Tours</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Time</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.title %></td>
        <td><%= tour.time %></td>
        <td><%= tour.description %></td>
        <td><%= link_to 'Show', tour %></td>
          
         <% if user_signed_in? %>
        <% if current_user.is_admin? %>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Booking', book_tour_path_url(tour.id) %></td>
        <% end %>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<% if current_user.is_admin? %>
<%= link_to 'New Tour', new_tour_path %>
<% end %>
<% end %>